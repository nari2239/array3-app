<div class="main-wrapper">

  <div class="graph-space">
    <%= link_to "新規投稿", new_tweet_path %>
  </div>

  <div class="card-space">
    <% @tweets.each_slice(3) do |tweet1,tweet2,tweet3| %>
      <div class="array-space">
      
        <% if tweet1 != nil %>
          <div class="card">
            <div class="skip-time-space">
              <label>・time</label>
              <div class="skip-time">15:00~16:00</div>
            </div>
            <div class="text-space">
              <label>・何をしていた</label>
              <div class="what-skip">
                  <%= tweet1.content %>
              </div>
              <label>・本来何をすべきだった</label>
              <div class="to-do">いいい</div>
            </div>
            <div class="update-btns">
              <%= link_to root_path, method: :get, class:"edit-link" do %>
                <i class="far fa-edit fa-2x"></i>
              <% end %>
              <%= link_to root_path, method: :get, class:"delete-link" do %>
                <i class="far fa-trash-alt fa-2x"></i>
              <% end %>
            </div>
          </div>
        <% end %>
  
        <% if tweet2 != nil %>
          <div class="card">
            <div class="skip-time-space">
              <label>・time</label>
              <div class="skip-time">15:00~16:00</div>
            </div>
            <div class="text-space">
              <label>・何をしていた</label>
              <div class="what-skip">
                  <%= tweet2.content %>
              </div>
              <label>・本来何をすべきだった</label>
              <div class="to-do">いいい</div>
            </div>
            <div class="update-btns">
              <%= link_to root_path, method: :get, class:"edit-link" do %>
                <i class="far fa-edit"></i>
              <% end %>
              <%= link_to root_path, method: :get, class:"delete-link" do %>
                <i class="far fa-trash-alt"></i>
              <% end %>
            </div>
          </div>
        <% end %>

        <% if tweet3 != nil %>
          <div class="card">
            <div class="skip-time-space">
              <label>・time</label>
              <div class="skip-time">15:00~16:00</div>
            </div>
            <div class="text-space">
              <label>・何をしていた</label>
              <div class="what-skip">
                  <%= tweet3.content %>
              </div>
              <label>・本来何をすべきだった</label>
              <div class="to-do">いいい</div>
            </div>
            <div class="update-btns">
              <%= link_to root_path, method: :get, class:"edit-link" do %>
                <i class="far fa-edit fa-2x"></i>
              <% end %>
              <%= link_to root_path, method: :get, class:"delete-link" do %>
                <i class="far fa-trash-alt fa-2x"></i>
              <% end %>
            </div>
          </div>
        <% end %>
  
      </div>
    <% end %>
  </div>
</div>