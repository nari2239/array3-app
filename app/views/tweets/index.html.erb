<div class="main-wrapper">

  <div class="graph-space">
    <%= link_to "新規投稿", new_tweet_path %>
  </div>

  <div class="card-space">
    <% @tweets.each_slice(3) do |tweet1,tweet2,tweet3| %>
      <div class="array-space">
      
        <% if tweet1 != nil %>
          <div class="card">
            <div class="skip-time-space">
              <label class="question-rabel">どのくらいサボった？</label>
              <div class="skip-time">#{○○}分</div>
            </div>
            <div class="text-space">
              <label class="question-rabel">何してた？</label>
              <div class="what-skip">
                  <%= tweet1.content %>
              </div>
              <label class="question-rabel">何すべきだった？</label>
              <div class="to-do">いいい</div>
            </div>
            <div class="update-btns">
              <%= link_to root_path, method: :get, class:"edit-link" do %>
                <i class="far fa-edit fa-2x"></i>
              <% end %>
              <%= link_to root_path, method: :get, class:"delete-link" do %>
                <i class="far fa-trash-alt fa-2x"></i>
              <% end %>
            </div>
          </div>
        <% end %>
  
        <% if tweet2 != nil %>
          <div class="card">
            <div class="skip-time-space">
              <label class="question-rabel">どのくらいサボった？</label>
              <div class="skip-time">#{○○}分</div>
            </div>
            <div class="text-space">
              <label class="question-rabel">何してた？</label>
              <div class="what-skip">
                  <%= tweet2.content %>
              </div>
              <label class="question-rabel">何すべきだった？</label>
              <div class="to-do">いいい</div>
            </div>
            <div class="update-btns">
              <%= link_to root_path, method: :get, class:"edit-link" do %>
                <i class="far fa-edit fa-2x"></i>
              <% end %>
              <%= link_to root_path, method: :get, class:"delete-link" do %>
                <i class="far fa-trash-alt fa-2x"></i>
              <% end %>
            </div>
          </div>
        <% end %>

        <% if tweet3 != nil %>
          <div class="card">
            <div class="skip-time-space">
              <label class="question-rabel">どのくらいサボった？</label>
              <div class="skip-time">#{○○}分</div>
            </div>
            <div class="text-space">
              <label class="question-rabel">何してた？</label>
              <div class="what-skip">
                  <%= tweet3.content %>
              </div>
              <label class="question-rabel">何すべきだった？</label>
              <div class="to-do">いいい</div>
            </div>
            <div class="update-btns">
              <%= link_to root_path, method: :get, class:"edit-link" do %>
                <i class="far fa-edit fa-2x"></i>
              <% end %>
              <%= link_to root_path, method: :get, class:"delete-link" do %>
                <i class="far fa-trash-alt fa-2x"></i>
              <% end %>
            </div>
          </div>
        <% end %>

      </div>
    <% end %>
  </div>
</div>

<div class="new-record-btn">
  <span class="fa-stack fa-2x">
    <i class="fas fa-circle fa-stack-2x" style="color: #FF3399;"></i>
    <i class="fas fa-plus fa-stack-1x" style="color: white;"></i>
  </span>
</div>

<%# モーダル部分 %>
<div class="new-record-modal-wrapper" id="new-record-modal">
  <div class="modal">
    <div id="new-record-form">
      <div class="modal-title">記録追加</div>
        <%= form_with url:  tweets_path, method: :post, id: "form" do |f| %>
          <div class="modal-input-wrapper">
            <%# <input class="modal-input-space" type="number" placeholder="どのくらいサボった？ 半角数字で記入 (分単位)"> %>
            <%= f.number_field :hoge, placeholder: "どのくらいサボった？ 半角数字で記入 (分単位)", class: "modal-input-space" %>
            <%# <input class="modal-input-space" type="text" placeholder="何してた？"> %>
            <%= f.text_area :content, placeholder: "何してた？", class: "modal-input-space" %>
            <%# <input class="modal-input-space" type="text" placeholder="何すべきだった？"> %>
            <%= f.text_area :hoge, placeholder: "何すべきだった？", class: "modal-input-space" %>
          </div>
          <div class="save-cancel-btns">
            <div class="cancel-btn">CANCEL</div>
            <%# <input class="modal-submit" type="submit" value="SAVE"> %>
            <%= f.submit 'SAVE', id: "submit", class: "modal-submit" %>
          </div>
        <% end %>
    </div>
  </div>
</div>
